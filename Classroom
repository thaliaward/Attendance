import java.util.Scanner;
/*
*
*
*
*/
public class Classroom
{
	String className, teacherUsername, teacherPassword;
	int period, startHour, startMin, endHour, endMin;
	ArrayList<Student> enrolledStudents = new ArrayList<Student>(0);
	Scanner scan = new Scanner(System.in);
	
	public Classroom()
	{
		className = "Class Name";
		teacherUsername = "Teacher Username";
		teacherPassword = "Teacher Password";
		int period = 0;
		int startHour = 0;
		int startMin = 0;
		int endHour = 0;
		int endMin = 0;
	}
	public Classroom(String cName, String tUName, String tPWord, int per, int sHour, int sMin, int eHour, int eMin)
	{
		className = cName;
		teacherUsername = tUName;
		teacherPassword = tPWord;
		period = per;
		startHour = sHour;
		startMin = sMin;
		endHour = eHour;
		endMin = eMin;
		fillEnrolledStudents();
	}
	
	public fillEnrolledStudents()
	{
		
	}
	public setClassName(String cN)
	{
		className = cN;
	}
	public setTeacherUsername(String tU)
	{
		teacherUsername = tU;
	}
	public setTeacherPassword(String tP)
	{
		teacherPassword = tP;
	}
	public setPeriod(int per)
	{
		period = per;
	}
	public setStartHour(int sH)
	{
		startHour = sH;
	}
	public setStartMin(int sM)
	{
		startMin = sM;
	}
	public setEndHour(int eH)
	{
		endHour = eH;
	}
	public setEndMin(int eM)
	{
		endMin = eM;
	}
}
